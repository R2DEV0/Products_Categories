@model Association

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Product Detail</title>
</head>
<body>
    <div class="container">
        <div class="col-12 text-center"> 
            <h1> @ViewBag.Product.Name </h1>
            <a href="/" class="col-12 text-center"> Product Home </a>
        </div> <hr>
        <div class="row">
            <div class="col-sm-6">
                <h3 class="text-center" style="text-decoration: underline;"> Categories </h3> <br>
                <ul>
                    @{
                        @foreach(var cat in ViewBag.Product.ProCats)
                        {
                            <li> @cat.Category.Name </li>
                        }
                    }
                </ul>
            </div>
            <form asp-action="AddToCategory" asp-route-ProductId="@ViewBag.Product.ProductId" asp-controller="Home" method="POST">
                <div class="form-group row">
                    <label for="Name" class="col-sm-5">Category: </label>
                    <select asp-for="CategoryId" class="col-sm-6 form-control">
                        <option selected="true" disabled="disabled"> select one </option>
                        @foreach(var item in ViewBag.Category)
                        {
                            <option value="@item.CategoryId"> @item.Name </option>
                        }
                    </select>
                </div>
                <div class="form-group row">
                    <input type="submit" value="Submit" class="col-sm-4 offset-sm-5 btn btn-success">
                </div>
            </form>
        </div>
    </div>
</body>
</html>